<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Microsoft.Msagl.Drawing">

    <Style TargetType="local:Label" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:Label">
                    <TextBlock Text="{Binding}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style TargetType="local:Node" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:Node">
                    <DataTemplate>
                        <TextBlock Text="{Binding LabelText}" Margin="4,4,4,3"/>
                    </DataTemplate>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

</ResourceDictionary>
